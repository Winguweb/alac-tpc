
<div class="container-fluid text-center d-flex align-items-center p-4 justify-content-center bg-light" style="height: 100vh">
  <div class="form-signin shadow bg-white rounded py-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= image_tag("logo_tpc.png", class: "img-logo")%>
      <div class="text-center d-flex justify-content-center mt-3">
        <span class="text-center">
          <strong><%= t(:title) %></strong>
        </span>
      </div>
      <div class="form-group d-flex flex-column align-items-center mt-4">
        <%= f.label :email, class: "sr-only" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-75 bg-white", placeholder: "Email" %>
        <%= f.label :password, class: "sr-only" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-75 bg-white", placeholder: "Contraseña" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label "Recordar email y contraseña" %>
        </div>
      <% end %>

      <div class="actions mb-3 px-3">
        <%= f.submit "Ingresar", class: "btn btn-primary btn-large btn-block" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>


